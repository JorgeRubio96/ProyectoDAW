<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>mx.tec.inscripciones.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>mx.tec.inscripciones.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>mx.tec.inscripciones.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherListServlet</servlet-name>
        <servlet-class>mx.tec.inscripciones.servlet.TeacherListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToDataBaseServlet</servlet-name>
        <servlet-class>mx.tec.inscripciones.servlet.AddToDataBaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateToDataBaseServlet</servlet-name>
        <servlet-class>mx.tec.inscripciones.servlet.UpdateToDataBaseServlet</servlet-class>
    </servlet>
    <!-- the mapping for the servlets -->
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern />
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherListServlet</servlet-name>
        <url-pattern>/teachers/*</url-pattern>
    </servlet-mapping>
    <!--Config. of the session and cookies-->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
